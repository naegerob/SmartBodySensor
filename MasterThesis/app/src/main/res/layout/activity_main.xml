<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/tvDeviceInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="40dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="40dp"
        android:layout_marginBottom="100dp"
        android:text="@string/here_are_device_names"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:textColor="#3F51B5"
        android:textSize="21sp" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvDeviceList"
        android:layout_width="317dp"
        android:layout_height="168dp"
        android:layout_alignTop="@id/tvDeviceInfo"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="75dp"
        android:layout_marginTop="75dp"
        android:clickable="true"
        android:contextClickable="true"
        android:nestedScrollingEnabled="false"
        android:scrollbars="vertical"
        android:textAlignment="center"
        app:layoutManager="LinearLayoutManager" />

        <Button
            android:id="@+id/buttonScan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/rvDeviceList"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="-81dp"
            android:onClick="btScan"
            android:text="@string/scan" />

        <Button
            android:id="@+id/buttonBond"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/rvDeviceList"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="-154dp"
            android:onClick="btBond"
            android:text="@string/bond" />
</RelativeLayout>